<Window x:Class="week_quatro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:week_quatro"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="100">
            <TextBlock>Title</TextBlock>
            <TextBox Name="Titleinput" Margin="0,0,0,15"></TextBox>
            <TextBlock>Release year</TextBlock>
            <TextBox Name="Ryearinput" Margin="0,0,0,15"></TextBox>
            <Button HorizontalAlignment="Center" Margin="0,0,0,15" Click="addbut">add</Button>
            <Button HorizontalAlignment="Center" Click="showbut">show all movies</Button>
        </StackPanel>
    </Grid>
</Window>
